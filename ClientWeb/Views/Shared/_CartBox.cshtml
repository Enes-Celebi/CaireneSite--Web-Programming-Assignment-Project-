@if (@ViewBag.cartBox != null)
{

    foreach (var item in @ViewBag.cartBox)
    {
        <li>
            <a class="M-cartbox-img" href="#"><img src="@item.Product.ImageURL" alt="@item.Product.AltText"></a>
            <div class="M-cartbox-info">
                <h4><a href="#">@item.Product.Name</a></h4>
                <p>@item.Quantity x @item.TotalAmount</p>
            </div>
            <a class="M-remove-product" href="@Url.Action("Remove", "MyCart", new { id=item.ProductID})"><span class="fa fa-times"></span></a>
        </li>
    }
}
<li>
    <span class="M-cartbox-total-title">
        Total
    </span>
    <span class="M-cartbox-total-price">
        @ViewBag.Total
    </span>
</li>